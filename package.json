{
  "name": "rpg-lore-engine",
  "version": "1.0.0",
  "description": "Strictly typed D&D 5e lore engine with Zod validation.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "server": "npx tsx server.ts",
    "server:tsnode": "npx ts-node --esm server.ts",
    "validate": "ts-node src/ruleset/scripts/validate.ts",
    "docs:gen": "ts-node src/ruleset/scripts/generateDocs.ts",
    "sync-biomes": "node scripts/sync-biomes.mjs",
    "dev": "npm run sync-biomes && vite",
    "build": "npm run sync-biomes && tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "express": "^5.2.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  }
}